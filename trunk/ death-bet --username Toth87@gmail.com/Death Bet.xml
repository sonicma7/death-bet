<Ui>
	<Script file="Death Bet.lua" />
	<Frame 	name="Death_Bet_MainFrame" parent="UIParent"
			enableMouse="true"
			movable="true">
		<Anchors>
			<Anchor point="CENTER" />
		</Anchors>
		<Size>
			<AbsDimension x="600" y="20" />
		</Size>
		<Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" tile="true">
			<TileSize>
				<AbsValue val="16"/>
			</TileSize>
		</Backdrop>
		<Frames>
			<Button name="$parent_Button">
				<Size>
					<AbsDimension x="150" y="35" />
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="-30" y="6.5" />
						</Offset>
					</Anchor>
				</Anchors>
				<NormalTexture file="Interface\Minimap\TRACKING\OBJECTICONS">
					<TexCoords left="0" right="0.125" top="0" bottom="0.5" />
				</NormalTexture>
				<HighlightTexture file="Interface\Minimap\TRACKING\OBJECTICONS">
					<TexCoords left="0.125" right="0.25" top="0" bottom="0.5" />
				</HighlightTexture>
				<Scripts>
					<OnClick>
						Death_Bet_Button_OnClick()
					</OnClick>
				</Scripts>
			</Button>
		</Frames>
		
		<Layers>
			<Layer level="ARTWORK">
				<FontString name="$parent_GoldString"
							inherits="SystemFont_Small"
							text="BUS IS AWESOME"
							justifyV="TOP"
							justifyH="RIGHT">
					<Size>
						<AbsDimension x="200" y="10" />
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="20" y="-5" />
							</Offset>
						</Anchor>
					</Anchors>
					<Color r="1" g="1" b="0" a="1" />
				</FontString>	
			</Layer>
		</Layers>
		
		<Scripts>
			<OnLoad>
				Death_Bet_OnLoad()
				DEFAULT_CHAT_FRAME:AddMessage("Autobus Locked and Loaded!")
			</OnLoad>
			
			<OnEvent>
				Death_Bet_OnEvent(self, event, ...)
			</OnEvent>
			
			<OnMouseDown>
				Death_Bet_OnMouseDown()
			</OnMouseDown>
			
			<OnMouseUp>
				Death_Bet_OnMouseUp()
			</OnMouseUp>
			
		</Scripts>
	</Frame>
</Ui>